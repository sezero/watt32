#
# GNU Makefile for `wget' (Watt32/Win32/MingW) utility
#

.SUFFIXES: .exe

STATIC_WATT32 = 1

SOURCE = cmpt.c connect.c cookies.c fnmatch.c ftp-basi.c ftp-ls.c \
         ftp-opie.c ftp.c gen-md5.c gen_sslf.c getopt.c gnu-md5.c \
         hash.c headers.c host.c html-par.c html-url.c http.c     \
         init.c log.c main.c netrc.c progress.c rbuf.c recur.c    \
         res.c retr.c safe-cty.c snprintf.c url.c utils.c         \
         version.c mswindow.c

OBJECTS = $(SOURCE:.c=.o)

CC      = gcc
CFLAGS  = -Wall -W -O2 -DHAVE_CONFIG_H -DWATT32 -I. -I../../inc -I../../inc/w32-fakes
LDFLAGS = # -s

ifeq ($(STATIC_WATT32),1)
  CFLAGS += -DWATT32_STATIC
  WATTLIB = ../../lib/libwatt32.a
else
  WATTLIB = ../../lib/libwatt32.dll.a
endif

all: wget_mw.exe
	@echo 'Welcome to $^.'

wget_mw.exe: $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $^ $(WATTLIB)

clean:
	rm -f $(OBJECTS)

